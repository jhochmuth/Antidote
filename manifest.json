{
  "name": "Antidote",
  "version": "1.0",
  "description": "An extension that blocks toxic youtube comments.",
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "*://*.youtube.com/*"
  ],
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net https://code.jquery.com; object-src 'self'",
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["arrive.js", "contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {"16": "icon.png", "48": "icon.png", "128": "icon.png"},
  "manifest_version": 2
}
